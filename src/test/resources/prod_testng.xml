<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TEST_UXCROWD_RU" verbose="1">
    <groups>
        <run>
            <include name="Prod"/>
        </run>
    </groups>

    <listeners>
        <listener class-name="ru.performance.tests.tools.ScreenShotOnFailListener"/>
        <listener class-name="ru.performance.tests.tools.CustomReport"/>
    </listeners>

    <test name="Smoke" annotations="Дымовые">

        <classes>
            <class name="ru.performance.tests.suites.Smoke.Smoke"/>
        </classes>
    </test>

    <test name="LoginFormAuthorization" annotations="Авторизация через форму">

        <classes>
            <class name="ru.performance.tests.suites.Login.LoginFormAuthorization"/>
        </classes>
    </test>

</suite>
